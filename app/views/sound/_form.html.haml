= form_for @sound do |f|
  - if @sound.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sound.errors.count, "error")} prohibited this sound from being saved:"
      %ul
        - @sound.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :snd
    = f.file_field :snd
    
  = f.fields_for :sound_langs do |pl|
    pl
    .field
      = pl.label :title
      = pl.text_field :title
    .field
      = pl.label :lang
      = pl.text_field :lang, :disabled => true
    .field
      = pl.label :description
      = pl.text_field :description, :size => 150




  .actions
    = f.submit 'Save'

/   .actions
/     = f.submit 'Save'