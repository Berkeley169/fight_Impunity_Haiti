= simple_form_for @user do |f|
  .field
    = f.label t(:first_name)
    = f.text_field :first_name
  .field
    = f.label t(:last_name)
    = f.text_field :last_name
  .field
    = f.label t(:email)
    = f.text_field :email
  -if @editing_self or @new_user
    .field
      = f.label t(:password)
      = f.password_field :password
    .field
      = f.label t(:password_confirmation)
      = f.password_field :password_confirmation
  -if not @editing_self
    .field
      = f.collection_radio_buttons :role, [["Manager", t(:manager)], ["Editor", t(:editor)], ["Tech", t(:tech)]], :first, :last
  .field
    = f.collection_radio_buttons :lang, [["English", t(:english)], ["French", t(:french)], ["Creole", t(:creole)], ["Spanish", t(:spanish)]], :first, :last
  .actions
    = f.submit t(:submit)

