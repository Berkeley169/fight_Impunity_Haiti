= content_for :title, "Manage users"

%div#panel
  - if current_user.role == "Manager"
    = button_to 'Add User', new_user_path, :id => :add_user_button, :class => "btn btn-small", :method => 'get'
  %br
  %table.table-striped.table
    %tr
      %th Name
      %th Role
      %th Primary Language
      %th Date Added
      %th Last Modified
      %th
      - if current_user.role == "Manager"
        %th
        %th
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.role
        %td= user.lang
        %td= user.created_at.to_s(:db)
        %td= user.updated_at.to_s(:db)
        %td= link_to 'Show', user_path(user.id)
        - if current_user.role == "Manager"
          %td= link_to 'Edit', edit_user_path(user.id)
          %td= link_to 'Delete', destroy_user_path(user), :confirm => "Are you user you want to delete user #{user.name}?"
        


