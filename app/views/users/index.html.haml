= content_for :title, "Manage users"

%div#panel
  = link_to 'Add User', new_user_path, :id => :add_user_button
  %table#user_table
    %tr
      %th Name
      %th Role
      %th Primary Language
      %th Date Added
      %th Last Modified
      %th
      %th
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.role
        %td= user.lang
        %td= user.created_at.to_s(:db)
        %td= user.updated_at.to_s(:db)
        %td= link_to 'Edit', edit_user_path(user.id)
        %td= link_to 'Delete', destroy_user_path(user), :confirm => "Are you user you want to delete user #{user.name}?"
        


