= form_for @picture do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      %ul
        - @picture.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :pic
    = f.file_field :pic
    
  = f.fields_for :picture_langs do |pl|
    pl
    .field
      = pl.label :title
      = pl.text_field :title
    .field
      = pl.label :lang
      = pl.text_field :lang, :disabled => true
    .field
      = pl.label :description
      = pl.text_field :description, :size => 150




  .actions
    = f.submit 'Save'

/   .actions
/     = f.submit 'Save'