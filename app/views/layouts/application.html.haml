!!!
%html
  %head
    %title FightImpunityHaiti
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button{:type => "button", :class => "navbar-toggle"}
            %span{:class => "icon-bar"}
            %span{:class => "icon-bar"}
            %span{:class => "icon-bar"}
        .navbar-brand= t(:fight)
        .collapse.navbar-collapse
          %ul{:class => "nav navbar-nav"}
            %li= link_to t(:home), '/'
            %li= link_to t(:about), {:controller => '/pages', :action => 'about'}
            %li= link_to t(:contact), {:controller => '/pages', :action => 'contact'}
            - unless current_user
              %li= link_to t(:login), new_user_session_path
            -else 
              %li= link_to t(:logout), sessions_logout_path
              %li= link_to t(:editprofile), edit_user_path(:id => current_user.id)
          -if current_user
            %div#user_name= "#{current_user.name}"
          = render 'partials/languages'
    .rule_bl
    - if user_signed_in?
      %div#sidebar
        = render "partials/dashboard_nav_#{current_user.role}"
    .container#main_content
      %p= flash[:notice]
      / %p= "#{flash[:notice]}"
      = yield
