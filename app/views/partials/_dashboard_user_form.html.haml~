= form_for @form_type, :url => { :action => :create} do |form|
  - User::REQUIRED_FIELDS.each do |field|
    - if field == :lang
      %text Language: 
      - Item::LANGUAGES.each do |lang|
        = form.radio_button field, lang
        = lang
    - else
      %text= field.to_s.sub("_"," ").capitalize + ':'
      - if field == :role
        - User::ROLES.each do |role|
          = form.radio_button field, role
          = role
      - elsif field =~ /pass/
        = form.password_field field
      - else
        = form.text_field field
    %br
  = form.submit 'Create New User'

