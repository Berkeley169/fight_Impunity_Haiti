= simple_form_for @video do |f|
  - if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :date
    = f.text_field :date

  .field
    = f.label :vid
    = f.text_field :vid
    
  = f.fields_for :video_langs do |vl|
    .field
      = vl.label :title
      = vl.text_field :title
    .field
      = vl.label :lang
      = vl.text_field :lang
    .field
      = vl.label :description
      = vl.text_field :description, :size => 150

  .field
    = f.association :tags, as: :check_boxes, label_method: :english

  .field
    = f.label :notes
    = f.text_area :notes, :rows => 10

  .actions
    = f.submit 'Save'

