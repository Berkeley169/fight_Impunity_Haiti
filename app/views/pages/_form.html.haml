= simple_form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label t(:title)
    = f.text_field :title
  .field
    = f.label t(:english)
    = f.text_area :english, :class => 'ckeditor' 
  .field
    = f.label t(:french)
    = f.text_area :french, :class => 'ckeditor' 
  .field
    = f.label t(:creole)
    = f.text_area :creole, :class => 'ckeditor' 
  .field
    = f.label t(:spanish)
    = f.text_area :spanish, :class => 'ckeditor' 
  .actions
    = f.submit t(:save)