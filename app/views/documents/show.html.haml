%p
  %b= t(:date) + ":"
  = @document.date

%p 
  = render 'show_' + @doc_type_sym.to_s

%p
  - @document_langs.sort.each do |dl|
    - if auth_to_view(dl)
      %h3= dl.lang
      - if user_signed_in?
        %b= t(:publication_status) + ":" 
        %b{:class => dl.status}= dl.status.humanize.titleize
      %p
        %b= t(:title) + ":"
        = dl.title
        %br
        %b= t(:description) + ":"
        %br
        = dl.description
- if user_signed_in?  
  %p
    %b= t(:notes) + ":"
    %br
    = @document.notes

= render 'bottom_links', :document => @document
