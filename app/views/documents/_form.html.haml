= form_for @document do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :english
    = f.check_box :english
  .field
    = f.label :french
    = f.check_box :french
  .field
    = f.label :creole
    = f.check_box :creole
  .field
    = f.label :spanish
    = f.check_box :spanish
  .actions
    = f.submit 'Save'
