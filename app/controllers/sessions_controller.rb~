class SessionsController < ApplicationController

  def login
    if params[:login]
      user =  User.find_by_username(params[:login][:username])
      if user
        session[:uid] = user.id
        redirect_to dashboard_path
      else
        @message = 'login failed'
      end
    else
      @message = 'no login attempt'
    end
  end
  
end
